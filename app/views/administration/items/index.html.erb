<main class="content">
	<div class="container-fluid p-0">

		<h1 class="h3 mb-3">Items</h1>

		<div class="row">
			<div class="col-12">

				<div class="card">
					<div class="table-responsive">
						<table class="table table-striped table-hover">
							<thead>
								<tr>
									<th>Prix de d√©part</th>
									<th>Pourcentage de remise</th>
									<th>Prix</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<% Item.all.each do |item| %>
								<tr>
									<%= form_for item, url: administration_item_path(item) do |f| %>
										<td><%= item.original_price %></td>
										<td><%= f.text_field :discount_percentage %></td>
										<td><%= item.price %></td>
										<td><%= f.submit "Modifier" %></td> 
									<% end %>
								</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>

	</div>
</main>
